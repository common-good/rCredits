    . '\\| id   | fullName | email | postalCode | state | city    | flags     | helper |'
    . '\\| .AAA | Abe One  | a@    | 01002      | MA    | Amherst | confirmed | .ZZZ   |"');
    And__('relations: "ASSOC'
    . '\\| id   | main | agent | permission | employee | isOwner | draw |'
    . '\\| :AAA | .AAD | .AAA  |            |        0 |       1 |    0 |"');
  }

